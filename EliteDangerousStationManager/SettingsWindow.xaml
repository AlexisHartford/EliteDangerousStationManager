<Window x:Class="EliteDangerousStationManager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="189" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="54.96"/>
            <RowDefinition Height="Auto" MinHeight="29.96"/>
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,0,30" Grid.RowSpan="2">
            <TextBlock Text="INARA API Key:" Margin="0,0,0,5"/>
            <TextBox x:Name="ApiKeyTextBox" Width="350"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Margin="0,10,0,0" Width="160">
            <Button Content="Save" Width="75" Margin="0,0,10,0" Click="SaveButton_Click"/>
            <Button Content="Cancel" Width="75" Click="CancelButton_Click"/>
        </StackPanel>
        <TextBlock Text="Highlight Color:" VerticalAlignment="Top" Width="100" Foreground="black" Margin="0,2,280,0" Grid.Row="1"/>
        <TextBox x:Name="ColorInput" Width="120" Text="" Margin="15,20,245,-21" Grid.Row="1"/>


    </Grid>

</Window>