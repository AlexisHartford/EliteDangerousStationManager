<Window x:Class="EliteDangerousStationManager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="371" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="10,10,10,0" Height="313" VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="54.96"/>
            <RowDefinition Height="Auto" MinHeight="29.96"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="10">
            <!-- ✅ Inara API Key -->
            <TextBlock Text="Inara API Key" Margin="0,0,0,5"/>
            <TextBox x:Name="ApiKeyTextBox" Width="300" Margin="0,0,0,10"/>

            <!-- ✅ Highlight Color -->
            <TextBlock Text="Highlight Color" Margin="0,0,0,5"/>
            <TextBox x:Name="ColorInput" Width="300" Margin="0,0,0,10"/>

            <!-- ✅ Public Checkbox -->
            <CheckBox x:Name="PublicCheckBox"
                      Content="Public (Use Server Database)"
                      IsChecked="False"
                      Margin="0,10,0,10"
                      Checked="PublicCheckBox_Checked"
                      Unchecked="PublicCheckBox_Unchecked"/>

            <StackPanel Margin="0,12,0,0">
                <TextBlock Text="Overlay Screen" FontWeight="Bold"/>
                <ComboBox x:Name="OverlayScreenCombo" Width="240"/>
            </StackPanel>

            <StackPanel Margin="0,12,0,0">
                <TextBlock Text="Overlay Corner" FontWeight="Bold"/>
                <ComboBox x:Name="OverlayCornerCombo" Width="240">
                    <ComboBoxItem Content="TopRight" IsSelected="True"/>
                    <ComboBoxItem Content="TopLeft"/>
                </ComboBox>
            </StackPanel>

            <!-- ✅ Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Width="75" Margin="5" Click="SaveButton_Click"/>
                <Button Content="Cancel" Width="75" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
