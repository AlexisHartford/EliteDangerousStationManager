<Window x:Class="EliteDangerousStationManager.SelectCommanderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Commander" Height="150" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="Select Commander:" Margin="0,0,0,10"/>
        <ComboBox x:Name="CommanderComboBox" Margin="0,0,0,10"/>
        <Button Content="OK" Click="OnOkClick" Width="80" HorizontalAlignment="Right"/>
    </StackPanel>
</Window>
