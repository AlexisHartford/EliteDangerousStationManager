<Window x:Class="EliteDangerousStationManager.ArchiveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EliteDangerousStationManager"
        Title="Archived Projects"
        Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#111">

    <Grid Margin="10">
        <Grid.Resources>
            <!-- top-level converter in the same CLR namespace -->
            <local:StringEqualsToVisibilityConverter x:Key="OwnerVis" CaseInsensitive="True"/>
        </Grid.Resources>


        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Right">
            <TextBox x:Name="SearchBox"
                     Width="200"
                     Margin="0,0,10,0"
                     Foreground="white"
                     VerticalAlignment="Center"
                     TextChanged="SearchBox_TextChanged"/>
            <ComboBox x:Name="SearchMode"
                      Width="120"
                      SelectedIndex="0"
                      VerticalAlignment="Center">
                <ComboBoxItem Content="Station Name"/>
                <ComboBoxItem Content="Created By"/>
                <ComboBoxItem Content="System Name"/>
            </ComboBox>
        </StackPanel>

        <ListBox Grid.Row="1"
                 x:Name="ArchivedList"
                 Background="Transparent"
                 BorderThickness="0"
                 Foreground="White"
                 ScrollViewer.VerticalScrollBarVisibility="Auto">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Background="#1a1a1a"
                            BorderBrush="#444"
                            BorderThickness="1"
                            Padding="10"
                            CornerRadius="5"
                            Margin="0,5">
                        <StackPanel>
                            <TextBlock Text="{Binding StationName}" 
                                       FontWeight="Bold" 
                                       FontSize="14"/>
                            <TextBlock Text="{Binding SystemName}" 
                                       Foreground="Gray"/>
                            <TextBlock Text="{Binding CreatedBy, StringFormat=Created By: {0}}"/>
                            <TextBlock Text="{Binding CreatedAt, StringFormat=Created: {0:yyyy-MM-dd HH:mm}}"/>
                            <TextBlock Text="{Binding ArchivedAt, StringFormat=Archived: {0:yyyy-MM-dd HH:mm}}"/>

                            <!-- ✅ NEW: Source display (Local or Server) -->
                            <TextBlock Text="{Binding Source, StringFormat=Source: {0}}" 
                                       Foreground="#66CCFF"
                                       FontWeight="SemiBold"/>

                            <!-- Duration if you keep it -->
                            <TextBlock Text="{Binding Duration, StringFormat=Duration: {0:%d}d {0:hh\\:mm}}" 
                                       Foreground="#77FF77"/>
                            <Button Content="DELETE"
        Margin="6,8,0,0"
        Padding="10,6"
        MinWidth="100"
        Click="DeleteArchived_Click"
        HorizontalAlignment="Right">
                                <Button.Visibility>
                                    <MultiBinding Converter="{StaticResource OwnerVis}">
                                        <!-- 1) owner on the row -->
                                        <Binding Path="CreatedBy"/>
                                        <!-- 2) current user exposed by the window -->
                                        <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="CurrentCommander"/>
                                    </MultiBinding>
                                </Button.Visibility>
                            </Button>

                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
